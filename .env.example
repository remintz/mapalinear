# MapaLinear Environment Configuration
# Copy this file to .env and adjust the values as needed

# Environment Configuration
# Options: development, production
# Default: development (enables hot reload, debug logging)
# Set to "production" in Render or other production environments
ENVIRONMENT=development

# API Configuration
MAPALINEAR_API_URL=http://localhost:8001/api
MAPALINEAR_HOST=0.0.0.0
MAPALINEAR_PORT=8001

# Geographic Data Provider
# Options: osm, here, tomtom
GEO_PRIMARY_PROVIDER=osm

# Cache Configuration
# Options: memory, postgres
CACHE_BACKEND=postgres

# PostgreSQL Configuration (when CACHE_BACKEND=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=mapalinear
POSTGRES_USER=mapalinear
POSTGRES_PASSWORD=mapalinear
POSTGRES_POOL_MIN_SIZE=0
POSTGRES_POOL_MAX_SIZE=50

# Cache TTL (Time To Live) in seconds
GEO_CACHE_TTL_GEOCODE=604800      # 7 days
GEO_CACHE_TTL_ROUTE=21600          # 6 hours
GEO_CACHE_TTL_POI=86400            # 1 day
GEO_CACHE_TTL_POI_DETAILS=43200    # 12 hours

# OpenStreetMap Configuration
OSM_OVERPASS_ENDPOINT=https://overpass-api.de/api/interpreter
OSM_NOMINATIM_ENDPOINT=https://nominatim.openstreetmap.org
OSM_USER_AGENT=mapalinear/1.0

# HERE Maps Configuration (required when GEO_PRIMARY_PROVIDER=here)
# HERE_API_KEY=your_here_api_key_here
# HERE_APP_ID=your_here_app_id_here
# HERE_APP_CODE=your_here_app_code_here

# Rate Limiting (requests per second)
GEO_RATE_LIMIT_OSM=1.0
GEO_RATE_LIMIT_HERE=10.0
GEO_RATE_LIMIT_TOMTOM=5.0

# Google OAuth                                                                                                  
GOOGLE_CLIENT_ID=123456789-abc.apps.googleusercontent.com                                                       
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxx                                                                               
                                                                                                                
# JWT (gere uma chave aleat√≥ria)                                                                                
JWT_SECRET_KEY=sua-chave-secreta-muito-longa-e-aleatoria-aqui                                                   
